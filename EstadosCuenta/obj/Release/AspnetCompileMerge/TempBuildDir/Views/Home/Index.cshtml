@model List<string>
@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string pW = string.Empty;
    string pH = string.Empty;
    string padding = string.Empty;
}

<hr />
@for (int x = 0; x < Model.Count; x++)
{
    pW = "30%";
    pH = "15%";
    padding = "35%";
    if (Model[x].Contains("CNC"))
    {
        pW = "20%";
        pH = "5%";
        padding = "38.7%";
    }
    <div class="row">
        <div class="col-md-12">
            <div style="width: 100%; padding-left: @padding;">
                <a href="javascript:Cargando('@Url.Action("Inicio", "Home", new { empresa = Model[x] })')">
                    <img src="@Url.Content("~/Content/images/" + Model[x] + ".png")" width="@pW" height="@pH" />
                </a>
            </div>
        </div>
    </div>
    <hr />
}

<script type="text/javascript" src="~/Scripts/js/Index.js"></script>